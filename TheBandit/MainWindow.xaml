<Window x:Class="TheBandit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBandit"
        mc:Ignorable="d"
        Title="The Bandit" Height="150" Width="320">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" Text="Enter name:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,20,0,0" TextWrapping="Wrap" Text="Enter age:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="20,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="NameBox"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="170,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="AgeBox"/>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Width="80" Margin="0,0,25,20" Content="Register" Name="Register" Click="Register_Click"/>
    </Grid>
</Window>
